{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "esModuleInterop": true,
    
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "./**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
